# Archivo de ejemplo para variables de entorno
# Copia este archivo como .env y configura tus valores

# =================================
# CONFIGURACIÓN DJANGO
# =================================
DJANGO_SETTINGS_MODULE=pagTickets.settings_railway
DEBUG=False
SECRET_KEY=tu-clave-secreta-aqui

# =================================
# CONFIGURACIÓN RAILWAY
# =================================
RAILWAY_ENVIRONMENT=production
PORT=8080

# =================================
# BASE DE DATOS (Railway PostgreSQL)
# =================================
DATABASE_URL=postgresql://usuario:password@host:puerto/database

# =================================
# CONFIGURACIÓN OPCIONAL
# =================================
ALLOWED_HOSTS=*.railway.app,*.up.railway.app,localhost,127.0.0.1

# =================================
# LOGGING
# =================================
DJANGO_LOG_LEVEL=INFO

# =================================
# CORS (Cross-Origin Resource Sharing)
# =================================
CORS_ALLOW_ALL_ORIGINS=True
